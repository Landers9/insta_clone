<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
            crossorigin="anonymous">

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
     rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

<%= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload' %>

<nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color:#fff;">
    <div class="container justify-content-center layout">
        <div class="d-flex flex-row justify-content-between align-items-center col-10">
            <a class="navbar-brand" href="#">
                <%= image_tag("ig-logo.png", :alt => "logo") %>
            </a>
            <div class="form-data">
                <form class="" action="#">
                  <input type="text" name="" value="" placeholder="search">
                </form>
            </div>
            <div class="d-flex flex-row">
                <ul class="list-inline m-0">
                    <li class="list-inline-item">
                      <%= link_to posts_path do %>
                        <span class="material-icons" style="color:#000;">home</span>
                      <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to favorites_path do %>
                          <span class="material-icons" style="color:#000;">favorite</span>
                        <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to new_post_path do %>
                          <span class="material-icons" style="color:#000;">add_circle</span>
                        <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to user_path(current_user.id) do%>
                          <%= image_tag current_user.image.url, class:"img-fluid rounded-circle", width:"25px", height:"auto", style:"margin-top:-20px;"%>
                        <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to session_path(current_user.id), method: :delete do%>
                          <span class="material-icons" style="color:#000;">logout</span>
                        <%end%>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div style="margin-top:100px;">
  <div class="container d-flex justify-content-center">
      <div class="col-10">
          <div class="row">
            <div class="col-md-8">
                <div class="card p-4">
                    <div class="card-body d-flex justify-content-start">
                        <ul class="list-unstyled mb-0">
                            <li class="list-inline-item">
                              <%if @user.image.url%>
                              <%= image_tag @user.image.url, :alt => "logo", class:"img-fluid rounded-circle mb-2 ml-3 story", width:"120px", height:"auto"%> <br>
                              <%end%>
                            </li>
                        </ul>
                        <ul>
                          <li><strong>Email: </strong><%= @user.email %></li><br>
                          <li><strong>Message: </strong>2 messages</li><br>
                          <li><strong>Followers: </strong> 156 followers</li>
                        </ul>
                    </div>
                    <%= link_to 'Edit profil', edit_user_path(@user), class:"mb-2 btn btn-block btn-info"%>

                </div>
            </div>
        </div>
    </div>
</div>
