<%= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload' %>

<nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color:#fff;">
    <div class="container justify-content-center layout">
        <div class="d-flex flex-row justify-content-between align-items-center col-10">
            <a class="navbar-brand" href="#">
                <%= image_tag("ig-logo.png", :alt => "logo") %>
            </a>
            <div class="form-data">
                <form class="" action="#">
                  <input type="text" name="" value="" placeholder="search">
                </form>
            </div>
            <div class="d-flex flex-row">
                <ul class="list-inline m-0">
                    <li class="list-inline-item">
                      <%= link_to posts_path do %>
                        <span class="material-icons" style="color:#000;">home</span>
                      <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to favorites_path do %>
                          <span class="material-icons" style="color:#000;">favorite</span>
                        <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to new_post_path do %>
                          <span class="material-icons" style="color:#000;">add_circle</span>
                        <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to user_path(current_user.id) do%>
                          <%= image_tag current_user.image.url, class:"img-fluid rounded-circle", width:"25px", height:"auto", style:"margin-top:-20px;"%>
                        <% end %>
                    </li>
                    <li class="list-inline-item ml-2">
                        <%= link_to session_path(current_user.id), method: :delete do%>
                          <span class="material-icons" style="color:#000;">logout</span>
                        <%end%>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

