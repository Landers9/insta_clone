<%= form_with(model: post, local:true, url: choose_new_or_edit) do |form| %>
  <% if post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="card gedf-card mt-5 mb-4">
      <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
              <li class="nav-item">
                  <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">Make
                      a publication</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images">Images</a>
              </li>
          </ul>
      </div>
      <div class="card-body">
          <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                  <div class="form-group">
                      <%= form.label :content, class: "sr-only", for: "message" %>
                      <%= form.text_area :content, class: "form-control", id:"message", rows: "3", placeholder: "Write..." %>
                  </div>
              </div>
              <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                  <div class="form-group">
                      <div class="custom-file">
                          <%= form.file_field :image, class: "custom-file-input", id: "customeFile" %>
                          <%= image_tag(post.image.url) if post.image && post.image.url %>
                          <%= form.label :image, class: "custom-file-label", for: "customFile" %>
                          <%= form.hidden_field :image_cache %>
                      </div>
                  </div>
                  <div class="py-4"></div>
              </div>
          </div>
          <div class="btn-toolbar justify-content-between">
              <div class="btn-group">
                  <%= form.submit "Publish", class:"btn btn-primary"%>
              </div>
              <div class="btn-group">
                  <%= link_to 'Back', posts_path, class:"btn btn-danger" %>
              </div>
          </div>
      </div>
  </div>
<% end %>
